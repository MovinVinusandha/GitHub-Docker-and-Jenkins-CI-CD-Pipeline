  pipeline {
    agent any
     
    stages {
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'https://github.com/MovinVinusandha/GitHub-Docker-and-Jenkins-CI-CD-Pipeline.git'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t movinvinusandha/nodeapp-test:${BUILD_NUMBER} .'
            }
        }
        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'test-dockerhub-pass', variable: 'dockerhub_password')]) {
                    sh "docker login -u movinvinusandha -p '${dockerhub_password}'"
                }
            }
        }
        stage('Push Image') {
            steps {
                sh "docker push movinvinusandha/nodeapp-test:${BUILD_NUMBER}"
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
